<%- layout('layouts/boilerplate') %>
<div
	id="map"
	style="height: 16rem; width: 100%"></div>
<h1 class="text-center mb-3">All Campground</h1>
<% for (campground of campgrounds) { %>
<div class="card mb-3">
	<div class="row">
		<div class="col-md-4">
			<% if (campground.image.length) { %>
			<img
				crossorigin="anonymous"
				src="<%- campground.image[(Math.floor(Math.random()*campground.image.length))].url %>"
				alt="<%- campground.image[(Math.floor(Math.random()*campground.image.length))].filename %>"
				class="img-fluid" />
			<% } else { %>
			<img
				src=""
				alt=""
				crossorigin="anonymous"
				class="img-fluid" />
			<% } %>
		</div>
		<div class="col-md-8">
			<div class="card-body">
				<h5 class="card-title"><%= campground.title %></h5>
				<p class="card-text"><%= campground.description %></p>
				<p class="card-text">
					<small class="text-muted"> <%= campground.location %> </small>
				</p>
				<a
					href="/campgrounds/<%- campground.id %>"
					class="btn btn-primary"
					>View <%= campground.title %></a
				>
			</div>
		</div>
	</div>
</div>
<% } %>

<script>
	const mapbox_token = "<%- process.env.MAPBOX_TOKEN %>";
	const campgrounds= {features: <%- JSON.stringify(campgrounds) %>}
</script>
<script src="/javascripts/indexMapScript.js"></script>
